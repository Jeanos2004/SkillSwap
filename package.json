{
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.5"
  },
  "scripts": {
    "build": "postcss assets/styles/app.css -o public/build/app.css",
    "watch": "postcss assets/styles/app.css -o public/build/app.css --watch",
    "tailwind-build": "tailwindcss -i ./assets/styles/app.css -o ./public/build/app.css --watch",
    "dev": "npm run tailwind-build"
  }
}
