{% extends 'base.html.twig' %}

{% block title %}{{ skill.title }} | SkillSwap{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-12">
        <!-- Breadcrumb avec animation -->
        <div class="flex items-center text-sm text-gray-500 mb-8 overflow-x-auto whitespace-nowrap" data-aos="fade-right" data-aos-delay="100">
            <a href="{{ path('app_home') }}" class="hover:text-primary-600 transition-colors duration-200">Accueil</a>
            <svg class="mx-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="{{ path('app_skill_index') }}" class="hover:text-primary-600 transition-colors duration-200">Compétences</a>
            <svg class="mx-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-primary-600 font-medium">{{ skill.title }}</span>
        </div>

        <div class="max-w-5xl mx-auto">
            <!-- En-tête de la compétence -->
            <div class="mb-8 text-center" data-aos="fade-down">
                <h1 class="text-4xl font-bold mb-4 gradient-text">{{ skill.title }}</h1>
                <div class="flex items-center justify-center space-x-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        ID: {{ skill.id }}
                    </span>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-secondary-100 text-secondary-800">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Ajoutée le {{ skill.createdAt ? skill.createdAt|date('d/m/Y') : 'N/A' }}
                    </span>
                </div>
            </div>

            <!-- Carte principale -->
            <div class="bg-white rounded-2xl premium-shadow overflow-hidden" data-aos="zoom-in" data-aos-delay="200">
                <!-- Header de la carte -->
                <div class="bg-gradient-to-r from-primary-700 to-primary-800 p-6 text-white">
                    <div class="flex items-center">
                        <div class="p-3 bg-white/10 rounded-lg mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold">Détails de la compétence</h2>
                            <p class="text-white/80">Informations complètes</p>
                        </div>
                    </div>
                </div>
                
                <!-- Contenu de la carte -->
                <div class="p-6 md:p-8">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                        <!-- Colonne de gauche - Informations principales -->
                        <div class="md:col-span-2 space-y-6">
                            <div data-aos="fade-up" data-aos-delay="300">
                                <h3 class="text-lg font-semibold text-gray-700 mb-2 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Description
                                </h3>
                                <div class="bg-gray-50 p-4 rounded-lg premium-shadow-sm">
                                    <p class="text-gray-700">{{ skill.description }}</p>
                                </div>
                            </div>
                            
                            <!-- Utilisateurs proposant cette compétence -->
                            <div data-aos="fade-up" data-aos-delay="400">
                                <h3 class="text-lg font-semibold text-gray-700 mb-2 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                    </svg>
                                    Utilisateurs proposant cette compétence
                                </h3>
                                <div class="bg-gray-50 p-4 rounded-lg premium-shadow-sm">
                                    {% if skill.users is defined and skill.users|length > 0 %}
                                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                            {% for user in skill.users %}
                                                <div class="flex items-center p-3 bg-white rounded-lg shadow-sm">
                                                    <div class="flex-shrink-0 h-10 w-10 rounded-full bg-primary-100 flex items-center justify-center">
                                                        <span class="text-primary-700 font-bold">{{ user.firstname|first }}{{ user.lastname|first }}</span>
                                                    </div>
                                                    <div class="ml-3">
                                                        <p class="text-sm font-medium text-gray-900">{{ user.firstname }} {{ user.lastname }}</p>
                                                        <p class="text-xs text-gray-500">{{ user.email }}</p>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <p class="text-gray-500 italic">Aucun utilisateur ne propose cette compétence pour le moment.</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        
                        <!-- Colonne de droite - Actions et informations complémentaires -->
                        <div class="space-y-6">
                            <!-- Actions -->
                            <div class="bg-gray-50 rounded-xl p-6 premium-shadow-sm" data-aos="fade-left" data-aos-delay="300">
                                <h3 class="text-lg font-semibold text-gray-700 mb-4">Actions</h3>
                                <div class="space-y-3">
                                    <a href="{{ path('app_skill_edit', {'id': skill.id}) }}" class="btn-premium bg-gradient-to-r from-secondary-600 to-secondary-700 text-white font-medium px-4 py-2 rounded-lg shadow-lg hover:shadow-secondary-500/30 transition-all duration-300 w-full flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                        </svg>
                                        Modifier
                                    </a>
                                    <a href="{{ path('app_skill_index') }}" class="btn-secondary bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium px-4 py-2 rounded-lg transition-all duration-300 w-full flex items-center justify-center">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                                        </svg>
                                        Retour à la liste
                                    </a>
                                </div>
                            </div>
                            
                            <!-- Zone de danger -->
                            <div class="bg-red-50 rounded-xl p-6 premium-shadow-sm" data-aos="fade-left" data-aos-delay="400">
                                <h3 class="text-lg font-semibold text-red-700 mb-4 flex items-center">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                    </svg>
                                    Zone de danger
                                </h3>
                                <p class="text-sm text-red-600 mb-4">La suppression d'une compétence est définitive et pourrait affecter les échanges associés.</p>
                                {{ include('skill/_delete_form.html.twig') }}
                            </div>
                            
                            <!-- Statistiques -->
                            <div class="bg-gray-50 rounded-xl p-6 premium-shadow-sm" data-aos="fade-left" data-aos-delay="500">
                                <h3 class="text-lg font-semibold text-gray-700 mb-4">Statistiques</h3>
                                <div class="space-y-3">
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">ID</span>
                                        <span class="font-medium">{{ skill.id }}</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">Échanges associés</span>
                                        <span class="font-medium">{{ skill.exchanges is defined ? skill.exchanges|length : '0' }}</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">Utilisateurs</span>
                                        <span class="font-medium">{{ skill.users is defined ? skill.users|length : '0' }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrée pour le titre principal
            gsap.from('.gradient-text', {
                y: -50,
                opacity: 0,
                duration: 1.2,
                ease: 'power3.out'
            });
            
            // Animation pour les cartes d'information
            gsap.from('.premium-shadow-sm', {
                scrollTrigger: {
                    trigger: '.premium-shadow-sm',
                    start: 'top bottom-=100px',
                },
                opacity: 0,
                y: 30,
                stagger: 0.2,
                duration: 0.8,
                ease: 'power2.out'
            });
        });
    </script>
{% endblock %}
