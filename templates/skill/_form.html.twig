{{ form_start(form, {'attr': {'class': 'space-y-6', 'data-aos': 'fade-up', 'data-aos-delay': '200'}}) }}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
            <div class="form-group" data-aos="fade-right" data-aos-delay="250">
                {{ form_label(form.title, 'Titre de la compétence', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    {{ form_widget(form.title, {'attr': {
                        'class': 'pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50 transition-colors duration-200',
                        'placeholder': 'Ex: Développement web, Cuisine italienne, etc.'
                    }}) }}
                </div>
                {{ form_errors(form.title, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                <p class="text-gray-500 text-xs mt-1">Soyez précis et concis pour faciliter la recherche.</p>
            </div>
        </div>
        
        <div class="space-y-4">
            <div class="form-group" data-aos="fade-left" data-aos-delay="300">
                {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                    </div>
                    {{ form_widget(form.category, {'attr': {
                        'class': 'pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50 transition-colors duration-200'
                    }}) }}
                </div>
                {{ form_errors(form.category, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                <p class="text-gray-500 text-xs mt-1">Choisissez la catégorie la plus appropriée pour votre compétence.</p>
            </div>
        </div>
    </div>
    
    <div class="space-y-4 mt-6" data-aos="fade-up" data-aos-delay="350">
        {{ form_label(form.description, 'Description détaillée', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        <div class="relative">
            <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                </svg>
            </div>
            {{ form_widget(form.description, {'attr': {
                'class': 'pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:border-primary-500 focus:ring focus:ring-primary-200 focus:ring-opacity-50 transition-colors duration-200',
                'rows': 5,
                'placeholder': 'Décrivez votre compétence en détail : niveau, expérience, ce que vous pouvez enseigner...'
            }}) }}
        </div>
        {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        <p class="text-gray-500 text-xs mt-1">Une description détaillée augmente vos chances de trouver des partenaires d'échange.</p>
    </div>
    
    {% if form.users is defined %}
    <div class="mt-6 p-4 bg-gray-50 rounded-lg premium-shadow-sm" data-aos="fade-up" data-aos-delay="400">
        <h3 class="text-lg font-medium text-gray-900 mb-3 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            Utilisateurs associés
        </h3>
        {{ form_widget(form.users, {'attr': {'class': 'w-full rounded-lg border-gray-300'}}) }}
        {{ form_errors(form.users, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        <p class="text-gray-500 text-xs mt-2">Sélectionnez les utilisateurs qui possèdent cette compétence.</p>
    </div>
    {% endif %}
    
    <div class="hidden">
        {{ form_rest(form) }}
    </div>
    
    <div class="flex justify-end mt-8 pt-6 border-t border-gray-200" data-aos="fade-up" data-aos-delay="450">
        <a href="{{ path('app_skill_index') }}" class="btn-secondary bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium px-5 py-2.5 rounded-lg transition-all duration-300 flex items-center mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Annuler
        </a>
        <button type="submit" class="btn-premium bg-gradient-to-r from-primary-600 to-primary-700 text-white font-medium px-5 py-2.5 rounded-lg shadow-lg hover:shadow-primary-500/30 transition-all duration-300 transform hover:scale-105 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
