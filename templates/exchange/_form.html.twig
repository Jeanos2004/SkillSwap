{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    {% if form_errors(form) %}
        <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-4">
            <h3 class="text-lg font-medium">Compétence offerte</h3>
            <div>
                {{ form_label(form.offeredSkill, 'Compétence que vous proposez', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.offeredSkill, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                {{ form_errors(form.offeredSkill, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                <p class="text-gray-500 text-sm mt-1">Sélectionnez la compétence que vous souhaitez partager</p>
            </div>

            <div>
                {{ form_label(form.receiver, 'Destinataire', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.receiver, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                {{ form_errors(form.receiver, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                <p class="text-gray-500 text-sm mt-1">Choisissez l'utilisateur avec qui vous souhaitez échanger</p>
            </div>
        </div>

        <div class="space-y-4">
            <h3 class="text-lg font-medium">Compétence demandée</h3>
            <div>
                {{ form_label(form.requestedSkill, 'Compétence que vous souhaitez recevoir', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                {{ form_widget(form.requestedSkill, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500'}}) }}
                {{ form_errors(form.requestedSkill, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                <p class="text-gray-500 text-sm mt-1">Sélectionnez la compétence que vous souhaitez apprendre</p>
            </div>
        </div>
    </div>

    {% if form.details is defined %}
    <div class="mt-4">
        {{ form_label(form.details, 'Détails de l\'échange', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
        {{ form_widget(form.details, {'attr': {'class': 'block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500', 'rows': 4}}) }}
        {{ form_errors(form.details, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        <p class="text-gray-500 text-sm mt-1">Précisez les détails de votre proposition d'échange (optionnel)</p>
    </div>
    {% endif %}

    <div class="hidden">
        {{ form_rest(form) }}
    </div>

    <div class="flex justify-end mt-6">
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
