{% extends 'base.html.twig' %}

{% block title %}Mes échanges{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-3xl font-bold">Mes échanges</h1>
            <a href="{{ path('app_exchange_new') }}" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Proposer un échange</a>
        </div>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-100 text-green-800{% elseif label == 'error' %}bg-red-100 text-red-800{% else %}bg-blue-100 text-blue-800{% endif %}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        <div class="bg-white shadow-md rounded-lg overflow-hidden border border-gray-200 mb-6">
            <div class="overflow-x-auto">
                {% if exchanges|length > 0 %}
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Compétences échangées</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Participants</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                    {% for exchange in exchanges %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <div class="flex items-center">
                                        <span class="font-medium mr-2">Offert:</span>
                                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded text-sm">{{ exchange.offeredSkill.name }}</span>
                                    </div>
                                    <div class="flex items-center mt-1">
                                        <span class="font-medium mr-2">Demandé:</span>
                                        <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm">{{ exchange.requestedSkill.name }}</span>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex flex-col">
                                    <div class="text-sm">
                                        <span class="font-medium">Offrant:</span> {{ exchange.offerer.fullName }}
                                    </div>
                                    <div class="text-sm mt-1">
                                        <span class="font-medium">Receveur:</span> {{ exchange.receiver.fullName }}
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full
                                    {% if exchange.status == 'pending' %}bg-yellow-100 text-yellow-800
                                    {% elseif exchange.status == 'accepted' %}bg-blue-100 text-blue-800
                                    {% elseif exchange.status == 'rejected' %}bg-red-100 text-red-800
                                    {% elseif exchange.status == 'completed' %}bg-green-100 text-green-800
                                    {% endif %}">
                                    {{ exchange.status|capitalize }}
                                </span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-500">
                                {{ exchange.createdAt ? exchange.createdAt|date('d/m/Y') : '' }}
                            </td>
                            <td class="px-6 py-4 text-sm font-medium">
                                <div class="flex space-x-2">
                                    <a href="{{ path('app_exchange_show', {'id': exchange.id}) }}" class="text-blue-600 hover:text-blue-900">Voir</a>
                                    {% if is_granted('EDIT', exchange) %}
                                        <a href="{{ path('app_exchange_edit', {'id': exchange.id}) }}" class="text-yellow-600 hover:text-yellow-900">Modifier</a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% else %}
                <div class="p-6 text-center text-gray-500">
                    Aucun échange trouvé. Commencez par proposer un échange de compétences !
                </div>
                {% endif %}
            </div>
        </div>

        <div class="mt-6">
            <h2 class="text-xl font-semibold mb-4">Légende des statuts</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="flex items-center">
                    <span class="px-2 py-1 rounded-full bg-yellow-100 text-yellow-800 text-sm font-semibold mr-2">Pending</span>
                    <span class="text-gray-600">En attente d'acceptation</span>
                </div>
                <div class="flex items-center">
                    <span class="px-2 py-1 rounded-full bg-blue-100 text-blue-800 text-sm font-semibold mr-2">Accepted</span>
                    <span class="text-gray-600">Échange accepté, en cours</span>
                </div>
                <div class="flex items-center">
                    <span class="px-2 py-1 rounded-full bg-red-100 text-red-800 text-sm font-semibold mr-2">Rejected</span>
                    <span class="text-gray-600">Échange refusé</span>
                </div>
                <div class="flex items-center">
                    <span class="px-2 py-1 rounded-full bg-green-100 text-green-800 text-sm font-semibold mr-2">Completed</span>
                    <span class="text-gray-600">Échange terminé</span>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
