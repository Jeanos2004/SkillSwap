{% extends 'base.html.twig' %}

{% block title %}Accueil | SkillSwap - Échange de compétences{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <style>
        .hero-gradient {
            background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 50%, #EC4899 100%);
            background-size: 200% 200%;
            animation: gradientBG 15s ease infinite;
        }
        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .card-hover {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            border-color: rgba(99, 102, 241, 0.3);
        }
        .btn-glow {
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        .btn-glow:after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(255,255,255,0) 0%, rgba(255,255,255,0.2) 100%);
            transform: translateX(-100%);
            transition: transform 0.6s ease;
            z-index: -1;
        }
        .btn-glow:hover:after {
            transform: translateX(100%);
        }
    </style>
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-gradient text-white py-24 md:py-32 relative overflow-hidden">
    <!-- Animated background elements -->
    <div class="absolute inset-0 opacity-20">
        <div class="absolute inset-0 bg-grid-white/[0.05] bg-[length:40px_40px]"></div>
    </div>
    
    <!-- Floating elements -->
    <div class="absolute -top-20 -right-20 w-64 h-64 bg-white/5 rounded-full filter blur-3xl"></div>
    <div class="absolute -bottom-20 -left-20 w-96 h-96 bg-accent-500/20 rounded-full filter blur-3xl"></div>
    
    <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center" data-aos="fade-up">
            <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
                <span class="block text-white">Échangez vos compétences,</span>
                <span class="text-accent-300">développez votre potentiel</span>
            </h1>
            <p class="text-xl md:text-2xl text-white/90 mb-10 max-w-2xl mx-auto">
                Rejoignez une communauté dynamique d'apprentissage mutuel et donnez vie à vos connaissances
            </p>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
                {% if app.user %}
                    <a href="{{ path('app_exchange_new') }}" class="btn-glow inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-all duration-300">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Proposer un échange
                    </a>
                    <a href="{{ path('app_profile') }}" class="btn-glow inline-flex items-center justify-center px-8 py-4 bg-white/10 text-white font-semibold rounded-lg border border-white/20 hover:bg-white/20 backdrop-blur-sm transition-all duration-300">
                        Mon profil
                    </a>
                {% else %}
                    <a href="{{ path('app_register') }}" class="btn-glow inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-all duration-300">
                        Commencer maintenant
                    </a>
                    <a href="{{ path('app_login') }}" class="btn-glow inline-flex items-center justify-center px-8 py-4 bg-white/10 text-white font-semibold rounded-lg border border-white/20 hover:bg-white/20 backdrop-blur-sm transition-all duration-300">
                        Se connecter
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-white opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
    </div>
</section>

<!-- Features Section -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16" data-aos="fade-up">
            <span class="inline-block px-4 py-1 text-sm font-semibold text-primary-600 bg-primary-50 rounded-full mb-4">
                Comment ça marche ?
            </span>
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Une expérience d'échange simplifiée</h2>
            <div class="w-20 h-1 bg-gradient-to-r from-primary-500 to-accent-500 mx-auto mb-6"></div>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">Découvrez comment SkillSwap peut transformer votre façon d'apprendre et de partager</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            <!-- Feature 1 -->
            <div class="bg-white rounded-xl p-8 card-hover" data-aos="fade-up" data-aos-delay="100">
                <div class="w-16 h-16 bg-gradient-to-br from-primary-100 to-primary-50 rounded-xl flex items-center justify-center mb-6 mx-auto">
                    <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3 text-center">Créez votre profil</h3>
                <p class="text-gray-600 text-center">Mettez en avant vos compétences et vos centres d'intérêt pour trouver des échanges pertinents.</p>
            </div>

            <!-- Feature 2 -->
            <div class="bg-white rounded-xl p-8 card-hover" data-aos="fade-up" data-aos-delay="200">
                <div class="w-16 h-16 bg-gradient-to-br from-secondary-100 to-secondary-50 rounded-xl flex items-center justify-center mb-6 mx-auto">
                    <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3 text-center">Trouvez des partenaires</h3>
                <p class="text-gray-600 text-center">Découvrez des personnes partageant vos intérêts et complémentaires à vos compétences.</p>
            </div>

            <!-- Feature 3 -->
            <div class="bg-white rounded-xl p-8 card-hover" data-aos="fade-up" data-aos-delay="300">
                <div class="w-16 h-16 bg-gradient-to-br from-accent-100 to-accent-50 rounded-xl flex items-center justify-center mb-6 mx-auto">
                    <svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3 text-center">Échangez vos savoirs</h3>
                <p class="text-gray-600 text-center">Organisez des échanges gagnant-gagnant et développez vos compétences mutuellement.</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-20 bg-gradient-to-r from-gray-50 to-gray-100">
    <div class="container mx-auto px-4 text-center">
        <div class="max-w-3xl mx-auto bg-white rounded-2xl p-12 shadow-xl relative overflow-hidden">
            <div class="absolute -top-20 -right-20 w-64 h-64 bg-primary-100 rounded-full opacity-20"></div>
            <div class="absolute -bottom-20 -left-20 w-64 h-64 bg-accent-100 rounded-full opacity-20"></div>
            
            <div class="relative z-10">
                <h2 class="text-4xl font-bold text-gray-900 mb-6" data-aos="fade-up">Prêt à échanger vos compétences ?</h2>
                <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">Rejoignez notre communauté et commencez votre voyage d'apprentissage dès aujourd'hui</p>
                <div data-aos="fade-up" data-aos-delay="200">
                    <a href="{{ app.user ? path('app_exchange_new') : path('app_register') }}" class="btn-glow inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-primary-600 to-accent-600 text-white font-semibold rounded-lg hover:opacity-90 transition-all duration-300">
                        {{ app.user ? 'Proposer un échange' : 'Commencer maintenant' }}
                        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Flash messages -->
<div class="fixed bottom-8 right-8 z-50 max-w-md w-full">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="bg-white rounded-xl shadow-2xl p-6 mb-4 transform transition-all duration-300 ease-in-out" data-aos="fade-left">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        {% if label == 'success' %}
                            <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                        {% else %}
                            <div class="w-10 h-10 rounded-full bg-red-100 flex items-center justify-center">
                                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                    <div class="ml-4">
                        <h3 class="text-lg font-medium text-gray-900">{{ label|capitalize }}</h3>
                        <div class="mt-1 text-sm text-gray-500">
                            <p>{{ message }}</p>
                        </div>
                        <div class="mt-4">
                            <button type="button" class="text-sm font-medium text-primary-600 hover:text-primary-500 focus:outline-none">
                                Fermer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    // Initialize AOS
    document.addEventListener('DOMContentLoaded', function() {
        AOS.init({
            duration: 800,
            easing: 'ease-out',
            once: true,
            offset: 100
        });
        
        // Close flash messages
        document.querySelectorAll('[data-dismiss="flash"]').forEach(button => {
            button.addEventListener('click', function() {
                this.closest('.flash-message').classList.add('opacity-0', 'translate-y-2');
                setTimeout(() => {
                    this.closest('.flash-message').remove();
                }, 300);
            });
        });
    });
</script>
{% endblock %}
