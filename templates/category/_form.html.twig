{{ form_start(form, {'attr': {'class': 'space-y-6', 'data-aos': 'fade-up', 'data-aos-duration': '800'}}) }}
    {% if form_errors(form) %}
        <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md premium-shadow-sm" role="alert" data-aos="fade-right" data-aos-delay="200">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm font-medium">Veuillez corriger les erreurs suivantes :</p>
                    <div class="mt-1 text-sm">
                        {{ form_errors(form) }}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="space-y-6">
        <!-- Champ Nom -->
        <div class="transition-all duration-300 transform hover:translate-y-[-2px]" data-aos="fade-up" data-aos-delay="100">
            <div class="relative">
                {{ form_label(form.name, 'Nom de la catégorie', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                <div class="relative rounded-md shadow-sm">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    {{ form_widget(form.name, {'attr': {'class': 'pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200', 'placeholder': 'Entrez le nom de la catégorie'}}) }}
                </div>
                {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm mt-1.5'}}) }}
                <p class="text-gray-500 text-xs mt-2 italic">Choisissez un nom concis et descriptif pour cette catégorie</p>
            </div>
        </div>

        <!-- Champ Description -->
        <div class="transition-all duration-300 transform hover:translate-y-[-2px]" data-aos="fade-up" data-aos-delay="200">
            <div class="relative">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                <div class="relative rounded-md shadow-sm">
                    <div class="absolute top-3 left-3 flex items-start pointer-events-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    {{ form_widget(form.description, {'attr': {'class': 'pl-10 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-primary-500 focus:border-primary-500 transition-colors duration-200', 'rows': 5, 'placeholder': 'Décrivez cette catégorie en quelques phrases...'}}) }}
                </div>
                {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-sm mt-1.5'}}) }}
                <p class="text-gray-500 text-xs mt-2 italic">Fournissez une description claire qui aide les utilisateurs à comprendre le type de compétences dans cette catégorie</p>
            </div>
        </div>
    </div>

    <div class="hidden">
        {{ form_rest(form) }}
    </div>

    <div class="flex justify-end pt-8 border-t border-gray-200 mt-10" data-aos="fade-up" data-aos-delay="300">
        <button type="submit" class="btn-premium bg-gradient-to-r from-primary-600 to-secondary-600 text-white font-medium px-8 py-3 rounded-lg shadow-lg hover:shadow-primary-500/50 transition-all duration-300 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}
