{% extends 'base.html.twig' %}

{% block title %}Modifier {{ category.name }} | SkillSwap{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-12">
        <!-- Hero section avec animation -->
        <div class="text-center mb-10" data-aos="fade-down">
            <h1 class="text-4xl font-bold mb-4 gradient-text">Modifier une catégorie</h1>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">Modifiez les informations de la catégorie {{ category.name }}</p>
        </div>
        
        <!-- Breadcrumb avec animation -->
        <div class="flex items-center text-sm text-gray-500 mb-8 overflow-x-auto whitespace-nowrap" data-aos="fade-right" data-aos-delay="100">
            <a href="{{ path('app_home') }}" class="hover:text-primary-600 transition-colors duration-200">Accueil</a>
            <svg class="mx-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="{{ path('app_category_index') }}" class="hover:text-primary-600 transition-colors duration-200">Catégories</a>
            <svg class="mx-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="hover:text-primary-600 transition-colors duration-200">{{ category.name }}</a>
            <svg class="mx-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-primary-600 font-medium">Modifier</span>
        </div>

        <div class="max-w-4xl mx-auto">
            <!-- Carte principale avec animation -->
            <div class="bg-white rounded-2xl premium-shadow overflow-hidden" data-aos="zoom-in" data-aos-delay="200">
                <!-- Header de la carte -->
                <div class="bg-gradient-to-r from-amber-500 to-amber-600 p-6 text-white">
                    <div class="flex items-center">
                        <div class="p-3 bg-white/10 rounded-lg mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold">Modifier la catégorie</h2>
                            <p class="text-white/80">Mettez à jour les informations</p>
                        </div>
                    </div>
                </div>
                
                <!-- Contenu de la carte -->
                <div class="p-6 md:p-8">
                    <!-- Message d'information -->
                    <div class="bg-amber-50 border-l-4 border-amber-500 p-4 mb-8 rounded-r-lg premium-shadow-sm" data-aos="fade-up" data-aos-delay="300">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg class="h-5 w-5 text-amber-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                </svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-amber-800 font-medium">Attention</h3>
                                <div class="mt-2 text-amber-700 text-sm">
                                    <p>La modification de cette catégorie affectera toutes les compétences qui y sont associées.</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulaire -->
                    {{ include('category/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                </div>
            </div>
            
            <!-- Zone de danger -->
            <div class="mt-10" data-aos="fade-up" data-aos-delay="400">
                <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <h3 class="text-sm font-medium text-red-800">Zone de danger</h3>
                            <div class="mt-2 text-sm text-red-700">
                                <p>La suppression d'une catégorie est définitive et peut affecter les compétences associées.</p>
                            </div>
                            <div class="mt-4">
                                {{ include('category/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Bouton retour -->
            <div class="mt-8" data-aos="fade-up" data-aos-delay="500">
                <a href="{{ path('app_category_index') }}" class="btn-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                    Retour à la liste
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrée pour le titre principal
            gsap.from('.gradient-text', {
                y: -50,
                opacity: 0,
                duration: 1.2,
                ease: 'power3.out'
            });
            
            // Animation pour la carte principale
            gsap.from('.premium-shadow', {
                y: 30,
                opacity: 0,
                duration: 1,
                delay: 0.3,
                ease: 'power2.out'
            });
        });
    </script>
{% endblock %}
