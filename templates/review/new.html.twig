{% extends 'base.html.twig' %}

{% block title %}Laisser un avis{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">Laisser un avis</h1>

        <div class="bg-white shadow-md rounded-lg p-6 mb-6 border border-gray-200">
            <h2 class="text-xl font-semibold mb-4">Échange avec {{ exchange.offerer.id == app.user.id ? exchange.receiver.fullName : exchange.offerer.fullName }}</h2>
            
            <div class="mb-4">
                <div class="flex items-center mb-2">
                    <span class="font-medium mr-2">Compétence offerte:</span>
                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">{{ exchange.offeredSkill.name }}</span>
                    <span class="mx-2 text-gray-400">par</span>
                    <span class="font-medium">{{ exchange.offerer.fullName }}</span>
                </div>
                <div class="flex items-center">
                    <span class="font-medium mr-2">Compétence demandée:</span>
                    <span class="bg-green-100 text-green-800 px-2 py-1 rounded">{{ exchange.requestedSkill.name }}</span>
                    <span class="mx-2 text-gray-400">par</span>
                    <span class="font-medium">{{ exchange.receiver.fullName }}</span>
                </div>
            </div>
        </div>

        <div class="bg-white shadow-md rounded-lg p-6 border border-gray-200">
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                <div class="mb-4">
                    {{ form_label(form.rating, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    <div class="mt-1">
                        {{ form_widget(form.rating, {'attr': {'class': 'flex flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-4'}}) }}
                    </div>
                    {{ form_errors(form.rating, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.comment, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    <div class="mt-1">
                        {{ form_widget(form.comment) }}
                    </div>
                    {{ form_errors(form.comment, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="flex justify-between mt-6">
                    <a href="{{ path('app_exchange_show', {'id': exchange.id}) }}" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">Annuler</a>
                    <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Envoyer l'avis</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
