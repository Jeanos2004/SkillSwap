{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe | SkillSwap{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-12">
    <div class="max-w-3xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-8">Changer mon mot de passe</h1>
        
        <div class="bg-white rounded-xl shadow-md p-6">
            {{ form_start(form) }}
                <div class="space-y-6">
                    {{ form_row(form.plainPassword.first, {
                        'label': 'Nouveau mot de passe'
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label': 'Confirmer le nouveau mot de passe'
                    }) }}
                    
                    <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200">
                        <a href="{{ path('app_profile') }}" class="btn btn-secondary">
                            Annuler
                        </a>
                        <button type="submit" class="btn text-white btn-primary bg-primary-500 premium-shadow rounded-full px-6 py-2">
                            Changer le mot de passe
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}