{% extends 'base.html.twig' %}

{% block title %}Mon profil - SkillSwap{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Mon profil</h1>
    
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="bg-{{ label == 'success' ? 'green' : 'red' }}-100 border border-{{ label == 'success' ? 'green' : 'red' }}-400 text-{{ label == 'success' ? 'green' : 'red' }}-700 px-4 py-3 rounded mb-4" role="alert">
                <p>{{ message }}</p>
            </div>
        {% endfor %}
    {% endfor %}
    
    <div class="bg-white shadow-md rounded-lg p-6 mb-6">
        <div class="flex flex-col md:flex-row">
            <div class="md:w-1/3 mb-4 md:mb-0">
                <div class="bg-gray-200 rounded-full h-32 w-32 flex items-center justify-center text-gray-600 text-4xl mx-auto">
                    {{ user.fullName|slice(0, 1)|upper }}
                </div>
            </div>
            <div class="md:w-2/3">
                <h2 class="text-2xl font-semibold mb-2">{{ user.fullName }}</h2>
                <p class="text-gray-600 mb-4">{{ user.email }}</p>
                
                <div class="mb-4">
                    <h3 class="text-lg font-medium mb-2">Statut de vérification</h3>
                    {% if user.isVerified %}
                        <span class="bg-green-100 text-green-800 px-2 py-1 rounded">Email vérifié</span>
                    {% else %}
                        <span class="bg-red-100 text-red-800 px-2 py-1 rounded">Email non vérifié</span>
                    {% endif %}
                </div>
                
                <div class="mb-4">
                    <h3 class="text-lg font-medium mb-2">Rôles</h3>
                    <div class="flex flex-wrap gap-2">
                        {% for role in user.roles %}
                            {% if role != 'ROLE_USER' %}
                                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">{{ role|replace({'ROLE_': ''}) }}</span>
                            {% endif %}
                        {% endfor %}
                        <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">USER</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white shadow-md rounded-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Mes compétences offertes</h3>
            {% if user.skills is defined and user.skills|length > 0 %}
                <ul class="list-disc pl-5">
                    {% for skill in user.skills %}
                        <li class="mb-2">{{ skill.title }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-gray-500">Vous n'avez pas encore ajouté de compétences.</p>
            {% endif %}
            <a href="#" class="inline-block mt-4 bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Ajouter une compétence</a>
        </div>
        
        <div class="bg-white shadow-md rounded-lg p-6">
            <h3 class="text-xl font-semibold mb-4">Mes échanges</h3>
            <div class="mb-4">
                <h4 class="font-medium mb-2">Échanges offerts</h4>
                {% if user.offeredExchanges is defined and user.offeredExchanges|length > 0 %}
                    <ul class="list-disc pl-5">
                        {% for exchange in user.offeredExchanges %}
                            <li class="mb-2">
                                {{ exchange.offeredSkill.title }} → {{ exchange.requestedSkill.title }}
                                <span class="text-sm text-gray-500">({{ exchange.status }})</span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-gray-500">Vous n'avez pas encore proposé d'échanges.</p>
                {% endif %}
            </div>
            
            <div>
                <h4 class="font-medium mb-2">Échanges reçus</h4>
                {% if user.receivedExchanges is defined and user.receivedExchanges|length > 0 %}
                    <ul class="list-disc pl-5">
                        {% for exchange in user.receivedExchanges %}
                            <li class="mb-2">
                                {{ exchange.offerer.fullName }} : {{ exchange.offeredSkill.title }} → {{ exchange.requestedSkill.title }}
                                <span class="text-sm text-gray-500">({{ exchange.status }})</span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-gray-500">Vous n'avez pas encore reçu d'échanges.</p>
                {% endif %}
            </div>
        </div>
    </div>
    
    <div class="mt-6">
        <a href="{{ path('app_home') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">Retour à l'accueil</a>
    </div>
</div>
{% endblock %}
